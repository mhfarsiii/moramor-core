# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://moramor:YOUR_PASSWORD@postgres:5432/moramor_db?schema=public"

# JWT - IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-MIN-32-CHARACTERS
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-MIN-32-CHARACTERS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis (for caching and session management)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 / MinIO
S3_ENDPOINT=http://minio:9000
S3_BUCKET=moramor-products
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_USE_SSL=false
S3_PUBLIC_URL=https://moramor.shop/storage

# Payment Gateway - ZarinPal
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=false
ZARINPAL_CALLBACK_URL=https://api.moramor.shop/api/v1/checkout/verify

# Payment Gateway - NextPay (Alternative)
NEXTPAY_API_KEY=
NEXTPAY_CALLBACK_URL=https://api.moramor.shop/api/v1/checkout/verify

# Sentry (Error Monitoring)
SENTRY_DSN=

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.moramor.shop/api/v1/auth/google/callback

# Email Service (Required for password reset and notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME=Moramor Store

# Frontend URL (Used for OAuth redirects and email links)
FRONTEND_URL=https://moramor.shop

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS
CORS_ORIGIN=https://moramor.shop,https://www.moramor.shop,https://api.moramor.shop

# Admin Default User (Change password after first login!)
ADMIN_EMAIL=admin@moramor.com
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=Administrator


