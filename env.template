# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://moramor:moramor123@localhost:5432/moramor_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
